<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.News" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.News.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.News.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.News.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.News.SimpleDraweeViewListImage">
        <item name="actualImageScaleType">centerCrop</item>
        <item name="failureImage">@drawable/ic_error</item>
        <item name="failureImageScaleType">centerInside</item>
        <item name="placeholderImageScaleType">centerInside</item>
        <item name="progressBarAutoRotateInterval">1000</item>
        <item name="progressBarImage">@drawable/ic_loading</item>
        <item name="progressBarImageScaleType">centerInside</item>
        <item name="roundBottomLeft">true</item>
        <item name="roundBottomRight">true</item>
        <item name="roundTopLeft">true</item>
        <item name="roundTopRight">true</item>
        <item name="roundedCornerRadius">12dp</item>
        <item name="roundingBorderWidth">1dp</item>
    </style>

</resources>